<UserControl x:Class="artool.layouts.TextureHorizonBrowser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:el="clr-namespace:artool.layouts"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid>
        <ScrollViewer x:Name="sv" Margin="0" HorizontalScrollBarVisibility="Auto" 
                      VerticalScrollBarVisibility="Disabled"
                      PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
            <StackPanel x:Name="panel" Orientation="Horizontal" Background="Transparent"
                        Margin="5,0,5,0"/>
        </ScrollViewer>
    </Grid>
</UserControl>
